<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:orientation="horizontal"
    android:background="#fff"
    android:padding="8dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chattt">

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/image_frame">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/man_placeholder"
        android:id="@+id/user_single_image"/>
    <ImageView
        android:id="@+id/status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/onlinecircle"
        android:layout_gravity="end|bottom"
        android:background="@drawable/circle_white"
        android:padding="@dimen/album_dp_1"
        android:visibility="gone"/>
</FrameLayout>




    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10sp"
        android:id="@+id/id"
        android:layout_toRightOf="@+id/image_frame"
        android:layout_centerVertical="true">

        <TextView

            android:id="@+id/user_single_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/roboto"
            android:text="...."
            android:lines="1"
            android:textColor="@color/theme"
            android:textSize="16sp" />
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/last_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:textColor="@color/bg_light"
        android:fontFamily="@font/roboto"
        android:text="...."
        android:textSize="12sp"
        android:lines="1"/>
    <TextView
        android:id="@+id/tv_typing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:textColor="@color/bg_light"
        android:fontFamily="@font/roboto"
        android:text="@string/typing"
        android:textSize="12sp"
        android:visibility="gone"
        android:textStyle="bold"/>
</FrameLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/statuslayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/last_message_time"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:textColor="@color/bg_light"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:text="12:51pm"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/unreadMessageCount"
            android:layout_width="@dimen/album_dp_20"
            android:layout_height="@dimen/album_dp_20"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textSize="10sp"
            android:padding="2dp"
            android:visibility="gone"
            android:background="@drawable/circle"
            tools:ignore="SmallSp" />

    </LinearLayout>
</RelativeLayout>
