<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="5dp">




    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/whitecolor">


        -<LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Moved : "
            android:fontFamily="@font/roboto"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10sp"
            android:textColor="#000">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:text="0m from current position"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:id="@+id/positionChangedDistance">
        </TextView>

    </LinearLayout>


        -<LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Speed : "
            android:fontFamily="@font/roboto"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10sp"
            android:textColor="#000">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:text="0m/s"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:id="@+id/victimSpeed">
        </TextView>

    </LinearLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="#E4E2E2">
        </View>


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mapLaunch"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/g_map"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center">

                </ImageView>



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="5dp"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:text="Relaunch Google Map"
                    android:textAllCaps="false"
                    android:textColor="@color/bg"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ownAppOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mapLaunch"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/map_loc"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    android:text="Position Track"
                    android:textAllCaps="false"
                    android:textColor="@color/bg"
                    android:textSize="14dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>