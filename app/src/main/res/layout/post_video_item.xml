<?xml version="1.0" encoding="UTF-8"?>
    <com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        >



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/frame_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_pic_video"
                android:orientation="vertical">




                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">



                    <ImageView
                        android:id="@+id/postVideoView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/sample"
                        android:alpha="0.8"

                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/play">

                    </ImageView>



                </FrameLayout>


            </LinearLayout>

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/frame_1"
                android:layout_margin="2dp"
                android:background="#E4E2E2">

            </View>



            <TextView
                android:id="@+id/details_pic_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_profile_video"
                android:fontFamily="@font/roboto"
                android:padding="4dp"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:text="Description of pic/video"
                android:textSize="16dp">

            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:src="@drawable/sample"
                app:civ_border_color="#ffff"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/usernameVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image_profile_video"
                android:fontFamily="@font/roboto"
                android:text="Nikhil Mahato"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/ripple_2"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameVideo"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/image_profile_video"
                android:fontFamily="@font/roboto"
                android:text="4 hrs ago" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_1"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    >


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/video_like_click"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:id="@+id/LikeVideo"
                            android:src="@drawable/heart"
                            >

                        </ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/youchkdVd"

                                android:visibility="gone"
                                android:textColor="@color/black"
                                android:layout_marginTop="2dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"

                                android:text="you and "
                                android:layout_gravity="center"
                                android:textSize="10dp"
                                android:alpha="0.7"/>
                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/like_countVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:alpha="0.7"
                            android:textSize="10dp" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/comment_holder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/commentVideo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:background="@drawable/comment" />

                        <TextView
                            android:id="@+id/comment_countVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:alpha="0.7"
                            android:textSize="10dp" />

                    </LinearLayout>







                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/down_holder"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageButton
                            android:id="@+id/download"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:background="@drawable/download"
                            />

                        <TextView
                            android:id="@+id/download_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:alpha="0.7"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/videoMore"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:alpha="0.8"
                android:src="@drawable/more"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:onClick="more"
                tools:ignore="OnClick" />


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


