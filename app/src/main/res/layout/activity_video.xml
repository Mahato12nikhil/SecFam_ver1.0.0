<?xml version="1.0" encoding="UTF-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/gjdjf"
       android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/finshL"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                >
            </ImageView>

        </LinearLayout>




    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_below="@id/gjdjf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:background="@color/white">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/frame_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:orientation="vertical">




                <FrameLayout
                    android:id="@+id/janina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/video_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:controller_layout_id="@layout/custom_controller"
                        app:resize_mode="fixed_width"
                        app:hide_on_touch="true"
                        app:shutter_background_color="@color/black"
                        app:show_timeout="5000"
                        app:rewind_increment="10000"
                        app:fastforward_increment="10000"
                        app:use_controller="true"
                        android:background="#000"
                        app:surface_type="surface_view"
                        app:auto_show="true"
                        app:repeat_toggle_modes="none"/>


                    <ImageView
                        android:id="@+id/emni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ImageView>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:indeterminateDrawable="@drawable/custom_progressbar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:theme="@style/myPlayerTheme"
                        android:visibility="visible">

                    </ProgressBar>

                </FrameLayout>


            </LinearLayout>

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/frame_1"
                android:layout_margin="2dp"
                android:background="#E4E2E2">

            </View>



            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_profile"
                android:fontFamily="@font/roboto"
                android:padding="4dp"
                android:textColor="@color/black"
                android:text="Description of pic/video"
                android:layout_marginLeft="4dp"
                android:textSize="16dp">

            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:src="@drawable/sample"
                app:civ_border_color="#ffff"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image_profile"
                android:fontFamily="@font/roboto"
                android:text="Nikhil Mahato"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/ripple_2"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/image_profile"
                android:fontFamily="@font/roboto"
                android:text="4 hrs ago" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_1"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/likeHolderFool"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <CheckBox
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/likeFool"
                            android:button="@null"
                            android:checked="false"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/liked"
                            android:stateListAnimator="@animator/scale">

                        </CheckBox>

                        <TextView
                            android:id="@+id/like_countFool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:alpha="0.7"
                            android:textSize="10dp" />

                    </LinearLayout>


                    <LinearLayout

                        android:id="@+id/comment_holderFool"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/ripple_2"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/commentFool"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/comment" />

                        <TextView
                            android:id="@+id/comment_countFool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:alpha="0.7"
                            android:textSize="10dp" />

                    </LinearLayout>



                    <LinearLayout

                        android:id="@+id/down_holderFoolp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_2"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/download"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/download" />

                        <TextView
                            android:id="@+id/download_countFool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:alpha="0.7"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:alpha="0.8"
                android:src="@drawable/more"
                android:background="@drawable/ripple_2"
                android:clickable="true"
                android:onClick="more"
                tools:ignore="OnClick" />


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

