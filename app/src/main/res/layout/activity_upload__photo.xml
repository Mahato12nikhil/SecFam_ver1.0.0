<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    tools:context=".Upload.Upload_Photo"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <include
        android:id="@+id/tooolbar"
        layout="@layout/post_toolbar">

    </include>
    <RelativeLayout
        android:layout_below="@id/tooolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pf_holder"
       >
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:id="@+id/frame">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            android:src="@drawable/man_placeholder"
            android:id="@+id/profile_image"/>
            <ImageView
                android:id="@+id/status"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/circle_white"
                android:padding="@dimen/album_dp_1"
                android:src="@drawable/onlinecircle"
                android:visibility="visible" />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/frame"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:id="@+id/username"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto">

        </TextView>

    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/pf_holder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >




    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/editText"
        android:layout_margin="2dp"
        android:textColorHint="@color/grey"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:padding="5dp"
        android:gravity="start"
        android:textSize="14sp"
        android:hint="@string/write_a_caption"
        android:fontFamily="@font/roboto"
        android:textColor="#000"

        android:minHeight="80dp"/>




    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/editText"
        android:background="@color/white"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_margin="2dp"
            android:layout_marginTop="4dp"
            android:elevation="10dp"
            android:background="@color/white"
            >




            <FrameLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:src="@drawable/sample"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/single_img_view"
                    android:scaleType="fitCenter"
                    android:visibility="gone">

                </ImageView>

                <androidx.recyclerview.widget.RecyclerView

                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/staggered_rv"
                    />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/dots_holder"
                    android:layout_gravity="bottom">
                </LinearLayout>

            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>

</RelativeLayout>