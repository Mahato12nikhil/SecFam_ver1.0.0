<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/rich_link_card"
    >

    <RelativeLayout
        android:id="@+id/checkLink"
        android:layout_below="@id/postTextxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frmmm"
                android:background="#F5F5F5">
            <TextView

                android:id="@+id/newsLinkPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:text="gggggggggg"

                android:fontFamily="@font/roboto"
                android:textSize="14sp" />

            <TextView
                android:autoLink="all"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/roboto"
                android:id="@+id/newsTextTitlePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_margin="5dp"
                android:text="ggggggg"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@id/newsLinkPost"/>

            </RelativeLayout>
            <FrameLayout
                android:background="#C4C4C4"
                android:id="@+id/frmmm"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ProgressBar

                    android:indeterminateDrawable="@drawable/custom_progressbar"
                    style="?android:attr/progressBarStyleLarge"
                    android:id="@+id/rotateloadingXY"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center" />

                <ImageView


                    android:id="@+id/newsThumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

                <ImageView

                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>